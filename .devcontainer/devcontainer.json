{
    "name": "Azure Integration Services devcontainer",
    // See https://github.com/devcontainers/images/tree/main/src/dotnet for list of supported versions.
    "image": "mcr.microsoft.com/devcontainers/javascript-node:20-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/azure/azure-dev/azd:latest": {},
        "ghcr.io/devcontainers/features/powershell:1": {},
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "installBicep": true
        },
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "postCreateCommand": [
        "bash",
        "-c",
        "npm install -g @azure/mcp azure-functions-core-tools@4"
    ],
    "customizations": {
        "vscode": {    
            "extensions": [
                // Azure extensions
                "ms-vscode.azurecli",
                "ms-azuretools.vscode-bicep",
                "ms-azuretools.vscode-apimanagement",
                "ms-azuretools.vscode-azurefunctions",
                "ms-azuretools.vscode-logicapps",
                "ms-azuretools.vscode-azurestorage",
                "ms-vscode.vscode-node-azure-pack",
                "apidev.azure-api-center",
                "ms-azuretools.vscode-mcp",
                // GitHub and AI extensions
                "GitHub.copilot",
                "GitHub.copilot-chat",
                // Documentation and diagramming
                "mermaidchart.vscode-mermaid-chart",
                "ms-vscode.copilot-mermaid-diagram",
                // Testing and API tools
                "humao.rest-client",
                "ms-playwright.playwright"
            ]
        }
    },
    "forwardPorts": [8080, 7071, 3000, 3100, 4200],
    "remoteUser": "node",
    "hostRequirements": {
        "memory": "8gb"
    }
}